{% extends 'base_logged.html.twig' %}

{% block nav %}

{{ parent() }}

{% endblock %}
{% block body %}

<header>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
       
          <h2 class="name titleBlock ">Photos of {{ dogs.name }}  <span class="badge"></span> </h2>

          
           <center><img  class="img-responsive text-center " src="{{ asset('img/bones.png') }}"></center>
    <div class="rowDivider" ></div>
          <div class="row" >
            <div class="col-lg-12">

                <div class="grid">
            {% for photo in photos %}

              <div class="grid-item">
              
              <div>
               <p class="text-left" > Dog: {{ photo.dog }}</p>
               <p class="text-left" > Description: {{ photo.description }}</p>
               </div>
               <a href="/profile/photos/{{photo.id}} ">
               <img  class="img-responsive img-rounded" width="300" height="300" src="{{ asset('images/profiles/' ~ photo.imageName) }}"> 
                </a>
               <div>
               <i class="fa fa-comment" aria-hidden="true"></i> <span class="badge">{{photo.comments | length }}</span> 
               <i class="fa fa-heart-o" aria-hidden="true"></i> <span class="badge">42</span> 
               <a class='red' href="/profile/photos/delete/{{photo.id}}">  <i class="fa fa-trash" aria-hidden="true"></i>  </a>
               </div>
               </div>
               
            {% endfor %}
            </div>
    


            </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</header>
 

{% endblock %}



{% block footer %}

{{ parent() }}

{% endblock %}

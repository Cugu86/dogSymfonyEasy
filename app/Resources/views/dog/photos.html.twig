{% extends 'base_logged.html.twig' %}

{% block nav %}

{{ parent() }}

{% endblock %}
{% block body %}

<header>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
          <h2 class="name titleBlock ">Photos  <span class="badge">{{photos | length}}</span> </h2>
          <button type="submit" class="btn btn-default bluButton buttonBlock " data-toggle="modal" data-target="#ModalPhotoInsert" >Add New</button>
           <center><img  class="img-responsive text-center " src="{{ asset('img/bones.png') }}"></center>
    <div class="rowDivider" ></div>
          <div class="row" >
            <div class="col-lg-12">

            <div class="grid">
            {% for photo in photos %}

              <div class="grid-item">
              
              <div>
               <p class="text-left" > Dog: {{ photo.dog.userFK }}</p>
               <p class="text-left" > Description: {{ photo.description }}</p>
               </div>
               <a href="/profile/photos/{{photo.id}} ">
               <img  class="img-responsive img-rounded" width="300" height="300" src="{{ asset('images/profiles/' ~ photo.imageName) }}"> 
                </a>
               <div>
               <i class="fa fa-comment" aria-hidden="true"></i> <span class="badge">{{photo.comments | length }}</span> 
               <i class="fa fa-heart-o" aria-hidden="true"></i> <span class="badge">42</span> 
               <a class='red' href="/profile/photos/delete/{{photo.id}}">  <i class="fa fa-trash" aria-hidden="true"></i>  </a>
               </div>
               </div>
               
            {% endfor %}
            </div>

             
  {% if photos is empty %}

            <h1 class="text-center" ><span  >Add your photos</span></h1>

            {% endif %}
            </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</header>
 


<!-- Modal Photo Insert -->
<div id="ModalPhotoInsert" class="modal fade" role="dialog">
  <div class="modal-dialog">
 <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add a Photo</h4>
      </div>
      <div class="modal-body">
          <div class="input_width_modal" >

            {{form_start(form)}}
            
        
            {{form(form)}}
            
  
            {{form_end(form)}}
       
         </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


{% endblock %}



{% block footer %}

{{ parent() }}

{% endblock %}

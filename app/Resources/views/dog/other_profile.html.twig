              <div class="grid-item">
              
              <div>
               <p class="text-left" > Dog: {{dog.name | capitalize }} </p>
            
               </div>
               <a href="/profile/dog/photos/{{dog.id}} ">
               <img  class="img-responsive img-rounded" width="300" height="300" src="{{ asset('images/profiles/' ~ dog.imageName) }}"> 

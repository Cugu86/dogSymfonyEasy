<header>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
      {% for user in user %}
          <h2 class="name">Profile {{ user}} </h2>
           {% endfor %}
            <center><img  class="img-responsive text-center " src="{{ asset('img/bones.png') }}"></center>
    <div class="rowDivider" ></div>
          <div class="row" >
